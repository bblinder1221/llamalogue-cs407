<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="right"
    android:background="#1b1b1b"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/sign_out_Button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:layout_margin="5dp"
        android:backgroundTint="#ccc698"
        android:padding="1dp"
        android:text="Sign Out"
        android:textColor="#1b1b1b"
        android:textSize="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="166dp"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/default_image"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginTop="32sp"
            android:layout_marginBottom="32sp"
            app:srcCompat="@drawable/app_icon" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="116dp"
            android:layout_height="71dp"
            android:layout_gravity="center|top"
            android:background="@drawable/welcome_bubble"
            android:padding="10dp"
            android:text="Welcome to Llamalogue!"
            android:textAlignment="center"
            android:textColor="#d54586" />

    </LinearLayout>

    <TextView
        android:id="@+id/tutorial_text"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Every Llama has their own personality! Choose 1 and see what theyâ€™re all about. "
        android:textAlignment="center"
        android:textColor="@android:color/white" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:padding="16dp" />

</LinearLayout>